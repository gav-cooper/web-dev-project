<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/js/accountPost.js" defer></script>
    <link rel="stylesheet" href="/css/allPosts.css">
    <title>Manage Posts</title>
</head>
<body>
    <div id="toolbar" class="toolbar-wrapper">
        <h1 id="website-title"><a href="/posts">Writing Space</a></h1>
        <ul class="link-container">
            <li id="posts"><a href="/posts">Home</a></li>
            <li id="Account"><a href="/account/<%= loggedIn.username %>">Account</a></li>
        </ul>
    </div>
    <div class="posts-wrapper">
        <% if (account === false) { %>
            <h1 class="error">This is not your account!</h1>
            
        <% } else { %>
            <% let i = 0; for (const post of posts) { i = i + 1%>
                <div class = "single-wrapper">
                    <div class="user-container">
                        <img id="pfp" src="<%= post.pfpPath %>">
                        <p><a href="/users/<%= post.username %>"><%= post.username %></a></p>
                    </div>
                    <div class="post-container">
                        <p><a href="/posts/<%= post.postID %>"><%= post.subject %></a></p>
                        <p><%= new Date(post.date).toLocaleString() %></p>
                        <p>Likes: <%= post.likes %></p> 
                    </div>
                    <div class="button-container">
                        <button postID="<%= post.postID %>" id="button<%= i %>" class="button">Delete</button>
                    </div>
                </div>
            <% } %>
        <% } %>
    </div>
</body>
</html>